<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardElevation="2.5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">


        <ImageView
            android:id="@+id/iv_cast"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            app:backgroundTint="@color/material_on_surface_emphasis_medium"
            app:backgroundTintMode="add"
            tools:src="@drawable/movie_cast_poster_h632" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_cast_name"
        style="?attr/textAppearanceSubtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_900"
        tools:text="Michael Caine" />

    <TextView
        android:id="@+id/tv_cast_as"
        style="?attr/textAppearanceBody2"
        android:textColor="@color/gray_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        tools:text="Professor John Brand" />

</LinearLayout>